                android:id="@+id/llSize"
                android:orientation="horizontal"
                android:background="@drawable/square_red"
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp">

                <com.blucor.vsfarm.customecomponent.CustomTextView
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="#9F0606"
                    android:textSize="@dimen/_11sdp"
                    app:font_name="NunitoExtraBold.ttf"
                    android:layout_margin="@dimen/_5sdp"
                    android:text="Quantity:"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <com.blucor.vsfarm.customecomponent.CustomTextView
                    android:gravity="center_vertical"
                    android:id="@+id/tvSize"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    app:font_name="NunitoRegular.ttf"
                    android:layout_margin="@dimen/_5sdp"
                    android:text="1 Kg (x 2 )"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>-->

            <LinearLayout
                android:visibility="gone"
                android:orientation="vertical"
                android:background="@drawable/square_red"
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_125sdp">


                <com.blucor.vsfarm.customecomponent.CustomTextView
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    app:font_name="NunitoExtraBold.ttf"
                    android:layout_margin="@dimen/_5sdp"
                    android:text="Track Order Details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/ivRecived"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/_10sdp"
                        app:srcCompat="@drawable/ic_radio_button_checked"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/tvOrderStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Received "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/ivCancel"
                        android:layout_gravity="center_vertical"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        app:srcCompat="@drawable/ic_radio_button_unchecked"
                        tools:ignore="VectorDrawableCompat" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:text="Cancelled"
                        android:textColor="@color/black_trans"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>
                <LinearLayout

                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@color/white">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        app:srcCompat="@drawable/ic_radio_button_unchecked"
                        tools:ignore="VectorDrawableCompat" />


                    <TextView
                        android:textColor="@color/black_trans"
                        android:textSize="@dimen/_10sdp"
                        android:text="Shipped"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/ivDelivered"
                        android:layout_gravity="center_vertical"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        app:srcCompat="@drawable/ic_radio_button_unchecked"
                        tools:ignore="VectorDrawableCompat" />


                    <TextView
                        android:textColor="@color/black_trans"
                        android:textSize="@dimen/_10sdp"
                        android:text="Delivered"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
