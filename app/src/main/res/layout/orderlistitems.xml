<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/llMain"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight=".4"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/productImage"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_gravity="center"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1.3"
            android:layout_width="0dp"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.blucor.vsfarm.customecomponent.CustomTextView
                        android:layout_gravity="left"
                        android:text="Order Id :"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:textColor="#333333"
                        android:layout_marginLeft="@dimen/_10sdp"
                        app:font_name="NunitoSemiBold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <com.blucor.vsfarm.customecomponent.CustomTextView
                        android:id="@+id/orderid"
                        android:text=""
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:textColor="#333333"
                        app:font_name="NunitoSemiBold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.blucor.vsfarm.customecomponent.CustomTextView
                        android:layout_gravity="left"
                        android:text="Product :"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:textColor="#333333"
                        android:layout_marginLeft="@dimen/_10sdp"
                        app:font_name="NunitoSemiBold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <com.blucor.vsfarm.customecomponent.CustomTextView
                        android:id="@+id/tvProductName"
                        android:text="Pipes"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:textColor="#333333"
                        app:font_name="NunitoSemiBold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.blucor.vsfarm.customecomponent.CustomTextView
                        android:text="Quantity :"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_gravity="left"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:textColor="#333333"
                        app:font_name="NunitoSemiBold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                <com.blucor.vsfarm.customecomponent.CustomTextView
                    android:singleLine="true"
                    android:layout_marginTop="@dimen/_minus3sdp"
                    android:layout_gravity="left"
                    android:id="@+id/tvQty"
                    android:text="1"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/black_trans"
                    android:layout_marginLeft="@dimen/_5sdp"
                    app:font_name="NunitoRegular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.blucor.vsfarm.customecomponent.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:text="Ordered on :"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black_trans"
                        />
                    <com.blucor.vsfarm.customecomponent.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:id="@+id/tvOrderDate"
                        android:singleLine="true"
                        android:text="Ordered on 10-Jul-2018"
                        android:textColor="@color/black_trans"
                        android:textSize="@dimen/_9sdp"
                        />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_weight=".3"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/rightarr"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp" />
        </LinearLayout>
    </LinearLayout>

    <com.blucor.vsfarm.customecomponent.CustomTextView
        android:layout_marginRight="@dimen/_15sdp"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/_5sdp"
        android:textSize="@dimen/_12sdp"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/_minus10sdp"
        android:textColor="@color/red_900"
        android:text="Cancel Order"
        android:id="@+id/tvCancel"
        app:font_name="NunitoRegular.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <com.blucor.vsfarm.customecomponent.CustomTextView
        android:layout_marginRight="@dimen/_15sdp"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/_5sdp"
        android:textSize="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_minus10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_gravity="left"
        android:textColor="@color/blue_900"
        android:text="Request Return"
        android:id="@+id/tvReturn"
        app:font_name="NunitoRegular.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:visibility="gone"
        android:background="@color/red_700"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:padding="@dimen/_5sdp"
        android:textSize="@dimen/_11sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_gravity="left"
        android:textColor="@color/white"
        android:text="Track Your Order"
        android:textAlignment="center"
        android:id="@+id/tvTrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="RtlCompat" />


    <com.blucor.vsfarm.customecomponent.CustomTextView
        android:visibility="gone"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:textSize="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_minus10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_gravity="left"
        android:textColor="@color/grey_700"
        android:text="Remark:"
        android:id="@+id/tvRemark"
        app:font_name="NunitoRegular.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <View android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_height="@dimen/view_width_small"
        android:background="@color/grey_light"
        />
</LinearLayout>