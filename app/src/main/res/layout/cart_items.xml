<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_3sdp"
    android:layout_marginLeft="@dimen/_3sdp"
    android:layout_marginBottom="@dimen/_4sdp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_160sdp">
        <ImageView
            android:padding="@dimen/_5sdp"
            android:id="@+id/cart_item_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/pipediv"/>
        <LinearLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin">

                <TextView
                    android:layout_weight=".2"
                    android:layout_gravity="end"
                    android:text="Remove"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:id="@+id/cart_item_delete"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:drawablePadding="@dimen/_3sdp"
                    android:clickable="true"
                    android:drawableLeft="@drawable/ic_baseline_delete_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            <View android:layout_width="match_parent"
                android:layout_height="@dimen/view_width_small"
                android:background="@color/grey_light"
                />
            <LinearLayout
                android:layout_weight="2"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Product:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            <com.blucor.vsfarm.customecomponent.CustomTextView
                    android:layout_weight="1.8"
                    android:layout_gravity="left"
                    android:id="@+id/tvcartProductName"
                    android:text="Pipes"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="#333333"
                    android:singleLine="true"
                    app:font_name="NunitoRegular.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Size:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.blucor.vsfarm.customecomponent.CustomTextView
                    android:layout_weight="1.8"
                    android:layout_gravity="left"
                    android:id="@+id/tvcartProductSize"
                    android:text="Pipes"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="#333333"
                    android:singleLine="true"
                    app:font_name="NunitoRegular.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <RelativeLayout
                android:visibility="gone"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_18sdp">

                <com.blucor.vsfarm.customecomponent.CustomTextView
                    android:id="@+id/tvFinalprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="\u20B9 499"
                    android:textColor="@color/greenprice"
                    android:textSize="@dimen/_12sdp"
                    app:font_name="NunitoSemiBold.ttf" />
                <com.blucor.vsfarm.customecomponent.CustomTextView
                    android:singleLine="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:id="@+id/tvOldPrice"
                    android:layout_toRightOf="@+id/tvFinalprice"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:text=" \u20B9 1399"
                    android:textColor="@color/dark_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.blucor.vsfarm.customecomponent.CustomTextView
                    android:singleLine="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_toRightOf="@+id/tvOldPrice"
                    android:textSize="@dimen/_10sdp"
                    android:id="@+id/tvSave"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:text=" Save \u20B9 700"
                    android:textColor="@color/red_800"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.blucor.vsfarm.customecomponent.CustomTextView
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="\u20B9"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    app:font_name="NunitoSemiBold.ttf" />

                <com.blucor.vsfarm.customecomponent.CustomTextView
                    android:id="@+id/price"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="1200"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    app:font_name="NunitoSemiBold.ttf" />
                <LinearLayout
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp">
                    <com.blucor.vsfarm.customecomponent.CustomTextView
                        android:text="Qty:"
                        android:textSize="@dimen/_11sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <EditText
                        android:id="@+id/quantity"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:background="@drawable/button_adproduct"
                        android:layout_width="@dimen/_40sdp"
                        android:inputType="number"
                        android:gravity="center"
                        android:maxLength="3"
                        android:layout_height="match_parent"/>
                    <ImageButton
                        android:id="@+id/check"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:padding="@dimen/_5sdp"
                        app:srcCompat="@drawable/ic_baseline_check_circle_24"
                        android:background="@null"
                        tools:ignore="VectorDrawableCompat"/>

                    <ImageButton
                        android:visibility="gone"
                        android:id="@+id/cart_quant_minus"
                        android:layout_gravity="center_vertical"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:padding="@dimen/_5sdp"
                        app:srcCompat="@drawable/minus_circle"
                        android:background="@null"
                        tools:ignore="VectorDrawableCompat" />
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/cart_item_number"
                        android:text="1"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageButton
                        android:visibility="gone"
                        android:id="@+id/cart_quant_add"
                        android:layout_gravity="center_vertical"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:padding="@dimen/_5sdp"
                        app:srcCompat="@drawable/plus_circle"
                        android:background="@null"
                        tools:ignore="VectorDrawableCompat" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvTotalCharge"
                    android:textColor="#07A10E"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Price : "/>
                <TextView
                    android:id="@+id/totalPrice"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#FF6A6A"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(GST Included)"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
