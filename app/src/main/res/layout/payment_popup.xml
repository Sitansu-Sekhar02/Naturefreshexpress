<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/payment_popup"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#FAFAFA"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivClosePopup"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:background="@drawable/cross"
            android:layout_marginRight="@dimen/_15sdp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_below="@+id/view"
            android:layout_centerHorizontal="true"
            android:background="@color/grey_300" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/thankyou"
                android:gravity="center"
                android:textColor="#0B0B0B"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please pay the amount in the Following Bank Details."
                android:textAlignment="center"
                android:textSize="@dimen/_14sdp"
                android:textColor="#121111"
                tools:ignore="RtlCompat" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_120sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:src="@drawable/qrcode_scanner"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="All"
                android:textSize="@dimen/_18sdp"
                android:textColor="#000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Bank Details"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="#FA0A0A"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"/>

        </LinearLayout>
        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_below="@+id/view"
            android:layout_centerHorizontal="true"
            android:background="@color/grey_300" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:background="@color/white_off"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.blucor.vsfarm.customecomponent.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:text="Bank Holder Name"
                        android:textColor="@color/grey_900"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="NunitoRegular.ttf" />
                    <com.blucor.vsfarm.customecomponent.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="V.S.FARM AGRI SOLUTION TRADERS"
                        android:id="@+id/tvOrderNumber"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="NunitoSemiBold.ttf" />
                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.blucor.vsfarm.customecomponent.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:text="Bank Name"
                        android:textColor="@color/grey_900"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="NunitoRegular.ttf" />
                    <com.blucor.vsfarm.customecomponent.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvDate"
                        android:layout_weight="1"
                        android:text="ORIENTAL BANK OF COMMERCE"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="NunitoSemiBold.ttf" />
                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.blucor.vsfarm.customecomponent.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:text="Branch Name"
                        android:textColor="@color/grey_900"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="NunitoRegular.ttf" />
                    <com.blucor.vsfarm.customecomponent.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/tvEmail"
                        android:text="MANCHAR"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="NunitoSemiBold.ttf" />
                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.blucor.vsfarm.customecomponent.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:text="Bank Account No."
                        android:textColor="@color/grey_900"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="NunitoRegular.ttf" />
                    <com.blucor.vsfarm.customecomponent.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/tvOrderTotal"
                        android:text="18024011000162"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="NunitoSemiBold.ttf" />
                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.blucor.vsfarm.customecomponent.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:text="IFSC Code"
                        android:textColor="@color/grey_900"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="NunitoRegular.ttf" />
                    <com.blucor.vsfarm.customecomponent.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ORBC0101802"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="NunitoSemiBold.ttf" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>




    </LinearLayout>
    </ScrollView>

</LinearLayout>