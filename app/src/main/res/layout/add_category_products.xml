<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".activity.AddCategory">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="@dimen/_35sdp">
        <ImageView
            android:id="@+id/icBack_product"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_back"
            android:layout_gravity="center_vertical"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Add Product to category"
            android:textColor="#fff"
            android:layout_marginStart="@dimen/_25sdp"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/addSize"
            android:layout_width="@dimen/_40sdp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/_15sdp"
            android:src="@drawable/plus_circle"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/_15sdp" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <Spinner
            android:id="@+id/spParent"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_height="@dimen/_25sdp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:drawableLeft="@drawable/ic_baseline_category_24"
        android:drawablePadding="@dimen/_5sdp"
        android:hint="Enter Product Name"
        android:id="@+id/productName"
        android:textColor="#000"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:drawableLeft="@drawable/ic_baseline_category_24"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawablePadding="@dimen/_5sdp"
            android:hint="Enter Product Price"
            android:id="@+id/productPrice"
            android:textColor="#000"/>

        <ImageView
        android:id="@+id/imgProductSelect"
        android:background="@drawable/button_border"
        android:layout_width="match_parent"
        android:layout_height="200dp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        app:srcCompat="@drawable/ic_launcher_foreground"
        tools:ignore="VectorDrawableCompat" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:background="@color/colorPrimary"
        android:textColor="#fff"
        android:textSize="@dimen/_16sdp"
        android:textAllCaps="false"
        android:text="Select Product Image"
        android:id="@+id/SelectProduct"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_gravity="center"
        android:text="Upload Product to Category"
        android:textColor="#FFF"
        android:background="@color/colorPrimary"
        android:layout_marginTop="@dimen/_20sdp"
        android:id="@+id/uploadProduct"/>

    </LinearLayout>
    </ScrollView>


</LinearLayout>